import SwiftUI

struct ContentView: View {
    var body: some View {
        ZStack {
            Circle()
                .fill(Color(hex: "#1E3D35")) // Dark green background
                .frame(width: 150, height: 150)
            
            Image("drink") // Replace with your image name in Assets
                .resizable()
                .scaledToFill() // Ensures the image fills the space
                .frame(width: 150, height: 200) // Adjust height to move the focus
                .clipped()
                .offset(y: -25) // Moves the image up to show more of the top
                .clipShape(Circle())
        }
    }
}
